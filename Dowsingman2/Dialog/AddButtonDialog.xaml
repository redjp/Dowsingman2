<UserControl x:Class="Dowsingman2.Dialog.AddButtonDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dowsingman2"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
        <StackPanel Margin="16,24,16,16">
            <TextBlock x:Name="AddButtonTextBlock"/>
            <TextBox Margin="0,8,0,0" HorizontalAlignment="Stretch" x:Name="AddButtonTextBox" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource MaterialDesignFlatButton}" IsCancel="True" Margin="0 8 0 0" Width="110"
                                    Command="materialDesign:DialogHost.CloseDialogCommand" CommandParameter="{StaticResource False}">
                    キャンセル
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}" IsDefault="True" Margin="0 8 0 0" Width="110"
                                    Command="materialDesign:DialogHost.CloseDialogCommand" CommandParameter="{StaticResource True}">
                    追加
                </Button>
            </StackPanel>
        </StackPanel>
</UserControl>
